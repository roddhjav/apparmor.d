abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/setpriv
profile setpriv @{exec_path} {
  include <abstractions/base>
  include <abstractions/nameservice-strict>

  @{exec_path} mr,

  /{usr/,}bin/[a-z0-9]* rPUx,
  /{usr/,}sbin/[a-z0-9]* rPUx,

  include if exists <local/setpriv>
}
