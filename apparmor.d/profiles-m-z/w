abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/w
profile w @{exec_path} {
  include <abstractions/base>
  include <abstractions/nameservice-strict>
  include <abstractions/wutmp>

  capability sys_ptrace,

  ptrace (read),

  @{exec_path} mr,

  @{PROC}/ r,
  @{PROC}/uptime r,
  @{PROC}/sys/kernel/osrelease r,
  @{PROC}/loadavg r,
  @{PROC}/@{pids}/stat r,
  @{PROC}/@{pids}/cmdline r,

  include if exists <local/w>
}
