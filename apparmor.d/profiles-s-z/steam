  @{bin}/lsb_release            rPx -> lsb_release,
  @{bin}/lsof                   rix,
  @{bin}/lspci                  rCx -> lspci,
  @{bin}/mkdir                  rix,
  @{bin}/mv                     rix,
  @{bin}/readlink               rix,
  @{bin}/realpath               rix,
  @{bin}/rm                     rix,
  @{bin}/rmdir                  rix,
