abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/ueberzugpp
profile ueberzugpp @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  owner @{user_dirs}/@{image_files} r,

  include if exists <local/ueberzugpp>
}

# vim:syntax=apparmor
