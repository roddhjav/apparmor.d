abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/unmkinitramfs
profile unmkinitramfs @{exec_path} {
  include <abstractions/base>
  include <abstractions/mapping/sudo>

  # To avoid the following error:
  #  cpio: etc/console-setup/null: Cannot mknod: Operation not permitted
  capability mknod,
  capability dac_override,

  @{exec_path} r,

  @{sh_path}        rix,
  @{archive_path}   rix,
  @{bin}/{,e}grep   rix,
  @{bin}/cat        rix,
  @{bin}/dd         rix,
  @{bin}/getopt     rix,
  @{bin}/lz4cat     rix,
  @{bin}/lzma       rix,
  @{bin}/lzop       rix,
  @{bin}/mkdir      rix,
  @{bin}/mktemp     rix,
  @{bin}/rm         rix,
  @{bin}/xzcat      rix,
  @{bin}/3cpio mrix,
  @{bin}/lz4 mrix,


        @{efi}/ r,
  owner @{efi}/initrd.img-* r,
        /tmp/ r,
  owner @{tmp}/initrd.img-* r,
        /mnt/ r,
  owner /mnt/initrd.img-* r,
        /mnt/boot/ r,
  owner /mnt/boot/initrd.img-* r,

  owner @{etc_ro}/group r,
  owner @{etc_ro}/nsswitch.conf r,

  # To extract the content of the initrd image
  owner @{tmp}/** rwl -> /tmp/**,

        /var/tmp/ r,
  owner /var/tmp/unmkinitramfs_* rw,

  include if exists <local/unmkinitramfs>
}

# vim:syntax=apparmor
