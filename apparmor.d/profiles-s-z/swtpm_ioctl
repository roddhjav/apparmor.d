abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/swtpm_ioctl
profile swtpm_ioctl @{exec_path} {
  include <abstractions/base>

  capability dac_override,
  capability dac_read_search,

  @{exec_path} mr,

  include if exists <local/swtpm_ioctl>
}