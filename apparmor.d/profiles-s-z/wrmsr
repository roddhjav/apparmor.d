abi <abi/3.0>,

include <tunables/global>

@{exec_path}  = @{bin}/wrmsr
profile wrmsr @{exec_path} {
  include <abstractions/base>

  # To access /dev/cpu/*/msr .
  capability sys_rawio,

  @{exec_path} mr,

  owner /dev/cpu/@{int}/msr w,

  include if exists <local/wrmsr>
}

# vim:syntax=apparmor
