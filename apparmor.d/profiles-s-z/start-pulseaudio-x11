abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/start-pulseaudio-x11
profile start-pulseaudio-x11 @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  @{bin}/{,ba,da}sh  rix,
  @{bin}/head        rix,
  @{bin}/pactl       rPx,
  @{bin}/plasmashell rPx,
  @{bin}/sed         rix,

  /etc/sysconfig/sound r,

  /dev/tty rw,

  include if exists <local/start-pulseaudio-x11>
}