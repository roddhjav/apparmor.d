abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/xinput
profile xinput @{exec_path} {
  include <abstractions/base>
  include <abstractions/X-strict>

  @{exec_path} mr,

  owner @{HOME}/.Xauthority r,

  include if exists <local/xinput>
}

# vim:syntax=apparmor
