abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/xclip
profile xclip @{exec_path} {
  include <abstractions/base>
  include <abstractions/X-strict>

  network unix stream,

  @{exec_path} mr,

  deny /dev/tty rw,

  include if exists <local/xclip>
}

# vim:syntax=apparmor
