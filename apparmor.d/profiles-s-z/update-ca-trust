abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/update-ca-trust
profile update-ca-trust @{exec_path} {
  include <abstractions/base>
  include <abstractions/ssl_certs>

  capability dac_read_search,

  unix (send receive) type=stream peer=(label=pacman),

  @{exec_path} mr,

  @{sh_path}    rix,
  @{bin}/find   rix,
  @{bin}/ln     rix,
  @{bin}/mkdir  rix,
  @{bin}/trust  rix,

  / r,
  /usr/share/p11-kit/modules/{,*} r,

  /etc/ca-certificates/extracted/** rw,
  /etc/ssl/certs/{,*} rw,
  /etc/ssl/certs/java/** rw,

  /dev/tty rw,

  # Inherit silencer
  deny network inet6 stream,
  deny network inet stream,

  include if exists <local/update-ca-trust>
}

# vim:syntax=apparmor
