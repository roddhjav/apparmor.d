abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/users
profile users @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/nameservice-strict>

  @{exec_path} mr,

  /var/log/wtmp rk,

  @{run}/utmp rk,

  include if exists <local/users>
}

# vim:syntax=apparmor
