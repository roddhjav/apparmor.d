abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/tlp
profile tlp @{exec_path} flags=(attach_disconnected) {
  include <abstractions/base>
  include <abstractions/bus-system>
  include <abstractions/disks-read>
  include <abstractions/graphics>
  include <abstractions/bus/org.freedesktop.PolicyKit1>
  include <abstractions/nameservice-strict>

  capability dac_read_search,
  capability net_admin,
  capability sys_nice,
  capability sys_rawio,
  capability sys_tty_config,

  network netlink raw,

  @{exec_path} mr,

  @{bin}/systemctl              rix,
  @{bin}/logger                 rix,
  @{sh_path}                    rix,
  @{bin}/cp                     rix,
  @{bin}/chmod                  rix,
  @{bin}/flock                  rix,
  @{bin}/sort                   rix,
  @{bin}/head                   rix,
  @{bin}/mktemp                 rix,
  @{bin}/readlink               rix,
  @{bin}/tr                     rix,
  @{bin}/ethtool                rix,
  @{bin}/grep                   rix,
  @{bin}/touch                  rix,
  @{bin}/cat                    rix,
  @{bin}/rm                     rix,
  @{bin}/id                     rpx,
  @{bin}/iw                     rpx,
  @{bin}/hdparm                 rix,
  @{bin}/uname                  rpx,
  @{bin}/udevadm rCx            -> udevadm,
  /usr/share/tlp/tlp-readconfs  rix,

  / r,

  /etc/tlp.d/ r,
  /etc/tlp.d/** rw,
  /etc/tlp.conf rw,
  /etc/udev/udev.conf r,

  /usr/share/tlp/** rw,
  /usr/share/tlp/func.d/** rw,
  
  /usr/share/tlp/tlp-readconfs   rw,

  /var/lib/power-profiles-daemon/state.ini rw,

  owner /usr/share/tlp/bat.d/** rw,

  @{run}/udev/data/+platform:* r,
  owner @{run}/tlp/* rw,
  owner @{run}/tlp/lock_tlp  rwk,
  owner @{run}/udev/data/b@{int}:@{int} r,

  @{sys}/firmware/acpi/platform_profile* rw,
  @{sys}/firmware/acpi/pm_profile* rw,

  owner @{PROC}/sys/vm/laptop_mode rw,
  owner @{PROC}/sys/vm/dirty_writeback_centisecs rw,
  owner @{PROC}/sys/vm/dirty_expire_centisecs rw,
  owner @{PROC}/sys/fs/xfs/xfssyncd_centisecs rw,
  owner @{PROC}/sys/kernel/nmi_watchdog rw,

  /dev/disk/by-id/ r,
  owner /dev/sda r,
  /dev/tty rw,
  
  include if exists <local/tlp>

  profile udevadm {
    include <abstractions/base>
    include <abstractions/app/udevadm>

    include if exists <local/tlp_udevadm>
  }
}

# vim:syntax=apparmor
