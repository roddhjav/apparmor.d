abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/whiptail
profile whiptail @{exec_path} flags=(complain) {
  include <abstractions/base>
  include <abstractions/consoles>

  capability dac_read_search,

  @{exec_path} mr,

  /etc/newt/palette.* r,

  owner /tmp/gpm* w,

  include if exists <local/whiptail>
}
