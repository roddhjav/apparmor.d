abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/uname
profile uname @{exec_path} flags=(attach_disconnected) {
  include <abstractions/base>
  include <abstractions/consoles>

  @{exec_path} mr,

  /dev/tty@{int} rw,

  deny network,
  deny @{user_share_dirs}/gvfs-metadata/* r,

  include if exists <local/uname>
}
