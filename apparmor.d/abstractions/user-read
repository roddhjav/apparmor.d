# Warning: This abstraction gives unrestricted read access on all non hidden user directories.

  owner @{HOME}/ r,
  owner @{MOUNTS}/ r,

  owner @{HOME}/[^.]** r,
  owner @{MOUNTS}/[^.]** r,

  include if exists <abstractions/user-read.d>

# vim:syntax=apparmor
