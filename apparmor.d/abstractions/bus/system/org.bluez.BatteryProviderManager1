  abi <abi/4.0>,

  dbus send bus=system path=/org/bluez/hci@{int}
       interface=org.bluez.BatteryProviderManager1
       member={RegisterBatteryProvider,RegisterProfile}
       peer=(name=org.bluez, label="@{p_bluetoothd}"),

  include if exists <abstractions/bus/system/org.bluez.BatteryProviderManager1.d>

# vim:syntax=apparmor
