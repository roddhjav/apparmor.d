  abi <abi/4.0>,

  dbus send bus=system path=/org/bluez/hci@{int}
       interface=org.bluez.Media1
       member={RegisterPlayer,UnregisterPlayer,RegisterApplication}
       peer=(name=org.bluez, label="@{p_bluetoothd}"),

  include if exists <abstractions/bus/system/org.bluez.Media1.d>

