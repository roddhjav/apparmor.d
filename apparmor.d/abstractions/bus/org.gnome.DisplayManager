  dbus send bus=system path=/org/gnome/DisplayManager/Manager
       interface=org.gnome.DisplayManager.Manager
       member=RegisterDisplay
       peer=(name=:*, label=gdm),

  include if exists <abstractions/bus/org.gnome.DisplayManager.d>

