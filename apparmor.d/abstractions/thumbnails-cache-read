  owner @{user_cache_dirs}/thumbnails/ r,
  owner @{user_cache_dirs}/thumbnails/{fail,*large,normal}/ r,
  owner @{user_cache_dirs}/thumbnails/{fail,*large,normal}/gnome-thumbnail-factory/ r,
