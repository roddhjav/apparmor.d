abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/img2txt
profile img2txt @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  owner @{user_dirs}/@{image_files} r,

  include if exists <local/img2txt>
}

# vim:syntax=apparmor
