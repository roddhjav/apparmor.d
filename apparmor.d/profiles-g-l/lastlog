abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/lastlog
profile lastlog @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/nameservice-strict>

  network netlink raw,

  @{exec_path} mr,

  /var/log/lastlog r,
  /etc/login.defs r,

  include if exists <local/lastlog>
}

# vim:syntax=apparmor
