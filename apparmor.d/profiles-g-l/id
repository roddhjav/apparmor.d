abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/id
profile id @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/nameservice-strict>

  @{exec_path} mr,

  /etc/machine-id r,

  deny @{user_share_dirs}/gvfs-metadata/* r,

  include if exists <local/id>
}

# vim:syntax=apparmor
