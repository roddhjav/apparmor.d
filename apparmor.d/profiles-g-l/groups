abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/groups
profile groups @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/nameservice-strict>

  @{exec_path} mr,

  /dev/tty@{u8} rw,

  include if exists <local/groups>
}

# vim:syntax=apparmor
