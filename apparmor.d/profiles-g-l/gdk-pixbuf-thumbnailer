abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/gdk-pixbuf-thumbnailer
profile gdk-pixbuf-thumbnailer @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  include if exists <local/gdk-pixbuf-thumbnailer>
}

