abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}{s,}bin/lvmconfig
profile lvmconfig @{exec_path} flags=(complain) {
  include <abstractions/base>
  include <abstractions/consoles>

  @{exec_path} rm,

  /etc/lvm/** rw,

  include if exists <local/lvmconfig>
}

