abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/lvmconfig
profile lvmconfig @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>

  @{exec_path} rm,

  @{etc_rw}/lvm/** rw,

  include if exists <local/lvmconfig>
}
