abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/lsusb
profile lsusb @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/devices-usb>

  network netlink raw,

  @{exec_path} mr,

  /etc/udev/hwdb.bin r,

  include if exists <local/lsusb>
}

# vim:syntax=apparmor
