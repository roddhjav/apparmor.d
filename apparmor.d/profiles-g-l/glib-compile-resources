abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/glib-compile-resources
profile glib-compile-resources @{exec_path} {
  include <abstractions/base>
  include <abstractions/user-tmp>

  @{exec_path} mr,

  @{bin}/xmllint rix,

  /tmp/resource-* rw,

  owner @{PROC}/@{pid}/fd/ r,

  include if exists <local/glib-compile-resources>
}

# vim:syntax=apparmor
