abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/iotop
profile iotop @{exec_path} {
  include <abstractions/base>
  include <abstractions/nameservice-strict>
  include <abstractions/python>

  capability sys_nice,

  network netlink raw,

  @{exec_path} r,

  @{bin}/ r,
  @{bin}/file rix,
  @{bin}/python3.@{int} r,

  /etc/magic r,

        @{PROC}/ r,
        @{PROC}/@{pids}/cmdline r,
        @{PROC}/@{pids}/task/ r,
        @{PROC}/sys/kernel/pid_max r,
        @{PROC}/vmstat r,
  owner @{PROC}/@{pid}/fd/ r,
  owner @{PROC}/@{pid}/mounts r,

  include if exists <local/iotop>
}

# vim:syntax=apparmor
