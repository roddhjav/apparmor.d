abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/install-info
profile install-info @{exec_path} flags=(attach_disconnected) {
  include <abstractions/base>
  include <abstractions/consoles>

  capability dac_read_search,

  unix (send receive) type=stream peer=(label=pacman),

  @{exec_path} mr,

  @{sh_path}          rix,
  @{bin}/gzip         rix,

  /usr/share/info/{,**} r,
  /usr/share/info/dir rw,
  /usr/share/info/dir-@{rand6} rw,

  /dev/tty rw,

  # Inherit silencer
  deny network inet6 stream,
  deny network inet stream,

  include if exists <local/install-info>
}

# vim:syntax=apparmor
