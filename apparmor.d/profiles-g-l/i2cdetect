abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/i2cdetect
profile i2cdetect @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  owner @{PROC}/@{pid}/mounts r,

  include if exists <local/i2cdetect>
}

# vim:syntax=apparmor
