abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/linux-check-removal
profile linux-check-removal @{exec_path} {
  include <abstractions/base>
  include <abstractions/common/debconf>

  @{exec_path} rmix,

  @{bin}/stty       rix,

  /etc/shadow r,

  include if exists <local/linux-check-removal>
}

# vim:syntax=apparmor
