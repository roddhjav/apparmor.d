abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/linux-version
profile linux-version @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/perl>

  @{exec_path} r,
  @{bin}/perl r,

  /boot/ r,

  include if exists <local/linux-version>
}

# vim:syntax=apparmor
