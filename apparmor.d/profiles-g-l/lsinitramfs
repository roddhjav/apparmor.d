abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/lsinitramfs
profile lsinitramfs @{exec_path} {
  include <abstractions/base>

  @{exec_path} r,
  @{sh_path}           rix,

  @{bin}/cat           rix,
  @{bin}/getopt        rix,

  @{bin}/unmkinitramfs rPx,

  include if exists <local/lsinitramfs>
}

# vim:syntax=apparmor
