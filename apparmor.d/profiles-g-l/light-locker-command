abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/light-locker-command
profile light-locker-command @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  include if exists <local/light-locker-command>
}

