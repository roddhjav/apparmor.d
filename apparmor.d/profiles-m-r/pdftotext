abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/pdftotext
profile pdftotext @{exec_path} {
  include <abstractions/base>
  include <abstractions/user-write-strict>

  @{exec_path} mr,

  /usr/share/poppler/{,**} r,

  include if exists <local/pdftotext>
}
