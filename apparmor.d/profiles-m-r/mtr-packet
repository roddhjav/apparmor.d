abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/mtr-packet
profile mtr-packet @{exec_path} {
  include <abstractions/base>

  capability net_raw,

  network inet stream,
  network inet6 stream,
  network inet dgram,
  network inet6 dgram,
  network inet raw,
  network inet6 raw,

  signal (receive) set=(kill, term) peer=mtr,

  @{exec_path} mr,

  include if exists <local/mtr-packet>
}
