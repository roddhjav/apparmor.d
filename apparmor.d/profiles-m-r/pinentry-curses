abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/pinentry-curses
profile pinentry-curses @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>

  @{exec_path} mr,

  @{sh_path}         rix,

  /usr/share/terminfo/** r,

  owner /dev/tty@{u8} r,

  include if exists <local/pinentry-curses>
}

# vim:syntax=apparmor
