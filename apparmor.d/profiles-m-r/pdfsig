abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/pdfsig
profile pdfsig @{exec_path} {
  include <abstractions/base>
  include <abstractions/ssl_certs>

  @{exec_path} mr,

  /usr/share/poppler/{,**} r,

  @{user_dirs}/[^.]*.[pP][dD][fF] r,
  owner @{user_dirs}/[^.]*.[pP][dD][fF] rw,

  include if exists <local/pdfsig>
}

# vim:syntax=apparmor
