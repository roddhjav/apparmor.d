abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{lib}/passimd
profile passimd @{exec_path} flags=(attach_disconnected) {
  include <abstractions/base>
  include <abstractions/avahi-observe>
  include <abstractions/bus-system>
  include <abstractions/bus/system/org.freedesktop.Avahi.EntryGroup>
  include <abstractions/nameservice-strict>
  include <abstractions/network-manager-observe>

  capability dac_read_search,

  network inet stream,
  network inet6 stream,
  network netlink raw,

  #aa:dbus own bus=system name=org.freedesktop.Passim path=/

  @{exec_path} mr,

  /usr/share/dbus-1/interfaces/org.freedesktop.Passim.xml r,

  /etc/passim.conf r,

  owner /var/lib/passim/{,**} rw,
  owner /var/log/passim/* rw,

  @{PROC}/@{pid}/cmdline r,

  include if exists <local/passimd>
}

# vim:syntax=apparmor
