abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/pinentry
profile pinentry @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>

  @{exec_path} mr,

  @{bin}/pinentry-*        rPx,
  @{sh_path}               rix,

  /etc/pinentry/preexec r,

  include if exists <local/pinentry>
}

# vim:syntax=apparmor
