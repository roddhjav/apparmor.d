  /usr/share/landscape/landscape-sysinfo.wrapper  rPx,

  /root/ r,

  /var/spool/anacron/cron.daily k,

  owner @{tmp}/#@{int} rw,
  owner @{tmp}/$anacron@{rand6} rw,
