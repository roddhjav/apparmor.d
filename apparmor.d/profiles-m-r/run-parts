  /etc/update-motd.d/ r,
  /etc/update-motd.d/* rPx,

  # Kernel
  /etc/kernel/{,header_}postinst.d/ r,
  /etc/kernel/{,header_}postinst.d/* rPx,
  /etc/kernel/postrm.d/ r,
