abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/numlockx
profile numlockx @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  owner @{HOME}/.Xauthority r,

  # file_inherit
  owner /dev/tty@{u8} rw,
  owner @{HOME}/.xsession-errors w,

  include if exists <local/numlockx>
}

# vim:syntax=apparmor
