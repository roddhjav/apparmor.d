abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/mediainfo
profile mediainfo @{exec_path} {
  include <abstractions/base>
  include <abstractions/user-read-strict>
  include <abstractions/user-tmp>

  @{exec_path} mr,

  include if exists <local/mediainfo>
}

# vim:syntax=apparmor
