abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{sbin}/rfkill
profile rfkill @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  @{sys}/devices/**/rfkill/rfkill@{int}/name r,
  @{sys}/devices/**/rfkill/rfkill@{int}/type r,

  /dev/rfkill rw,

  include if exists <local/rfkill>
}

# vim:syntax=apparmor
