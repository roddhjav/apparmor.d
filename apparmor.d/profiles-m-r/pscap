abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/pscap
profile pscap @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/nameservice-strict>

  capability sys_ptrace,

  ptrace (read),

  @{exec_path} mr,

  @{PROC}/ r,
  @{PROC}/@{pids}/stat r,

  include if exists <local/pscap>
}

# vim:syntax=apparmor
