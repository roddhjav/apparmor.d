abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/nfsdcld
profile nfsdcld @{exec_path} {
  include <abstractions/base>

  capability mknod,
  capability setpcap,

  @{exec_path} mr,

  /etc/nfs.conf r,
  /etc/nfs.conf rk,

  /var/lib/nfs/nfsdcld/{,**} rw,
  /var/lib/nfs/rpc_pipefs/nfsd/* rw,

  include if exists <local/nfsdcld>
}

# vim:syntax=apparmor
