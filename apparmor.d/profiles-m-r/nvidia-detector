abi <abi/3.0>,

include <tunables/global>

@{exec_path} =  @{bin}/nvidia-detector
profile nvidia-detector @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  include if exists <local/nvidia-detector>
}

# vim:syntax=apparmor
