abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/vendor_perl/exiftool
profile exiftool @{exec_path} {
  include <abstractions/base>
  include <abstractions/user-read>

  @{exec_path} mr,

  /usr/share/perl5/{,**} r,

  include if exists <local/exiftool>
}
