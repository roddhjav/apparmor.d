abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/arduino-ctags
profile arduino-ctags @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  owner @{tmp}/tags.* rw,

  owner @{tmp}/arduino_build_@{int}/** r,

  include if exists <local/arduino-ctags>
}

# vim:syntax=apparmor
