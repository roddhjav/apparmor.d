abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/ccze
profile ccze @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/nameservice-strict>

  @{exec_path} mr,

  @{lib}/@{multiarch}/ccze/*.so mr,

  /etc/cczerc r,

  include if exists <local/ccze>
}

# vim:syntax=apparmor
