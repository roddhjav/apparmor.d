abi <abi/4.0>,

include <tunables/global>

@{exec_path}  = @{bin}/archivemount
profile archivemount @{exec_path} {
  include <abstractions/base>
  include <abstractions/user-tmp>

  @{exec_path} mr,

  @{bin}/fusermount{,3} rCx -> fusermount,

        /**.{tar,tar.gz,zip} r,
        /**.{TAR,TAR.GZ,ZIP} r,
  owner /**.{tar,tar.gz,zip} w,
  owner /**.{TAR,TAR.GZ,ZIP} w,

  owner @{HOME}/ r,
  owner @{HOME}/*/ r,
  owner @{HOME}/*/*/ r,

  /dev/fuse rw,

  unix (receive, send) type=stream,

  mount fstype=(fuse.archivemount) options=(nodev, nosuid, rw),
  profile fusermount {
    include <abstractions/base>
    include <abstractions/app/fusermount>
    include <abstractions/common/chromium>

    mount fstype={fuse,fuse.archivemount} -> @{HOME}/*/,
    mount fstype={fuse,fuse.archivemount} -> @{HOME}/*/*/,
    mount fstype=(fuse.archivemount) options=(nodev, nosuid, rw),

    umount @{HOME}/*/,
    umount @{HOME}/*/*/,

    unix (receive, send) type=stream,

    /**.{tar,tar.gz,zip} r,
    /**.{TAR,TAR.GZ,ZIP} r,

    include if exists <local/archivemount_fusermount>
  }

  include if exists <local/archivemount>
}

# vim:syntax=apparmor
