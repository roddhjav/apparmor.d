abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/bmon
profile bmon @{exec_path} {
  include <abstractions/base>

  network netlink raw,

  @{exec_path} mr,

  /etc/bmon.conf r,

  include if exists <local/bmon>
}

# vim:syntax=apparmor
