abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/freefall
profile freefall @{exec_path} {
  include <abstractions/base>

  capability ipc_lock,
  capability mknod,
  capability sys_nice,

  @{exec_path} mr,

  @{sys}/devices/**/unload_heads r,
  @{sys}/class/leds/**/brightness r,

  /dev/freefall rw,
  /dev/sd[a-z]* rk,
  /dev/sd[a-z]*[0-9]* rk,

  include if exists <local/freefall>
}
