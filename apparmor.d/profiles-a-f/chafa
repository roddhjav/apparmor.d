abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/chafa
profile chafa /{,usr/}bin/chafa {
  include <abstractions/base>
  include <abstractions/user-read-strict>

  @{exec_path} mr,

  include if exists <local/chafa>
}

# vim:syntax=apparmor
