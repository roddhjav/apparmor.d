abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{lib}/cups/backend/serial
profile cups-backend-serial @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  /etc/papersize r,

  /dev/ttyS@{int} w,

  include if exists <local/cups-backend-serial>
}

# vim:syntax=apparmor
