abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/aplay
profile aplay @{exec_path} flags=(complain) {
  include <abstractions/base>
  include <abstractions/audio-client>

  @{exec_path} mr,

  /var/lib/dbus/machine-id r,
  /etc/machine-id r,

  owner @{HOME}/.Xauthority r,

  include if exists <local/aplay>
}

# vim:syntax=apparmor
