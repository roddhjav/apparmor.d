abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/ed2k
profile ed2k @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>

  @{exec_path} mr,

  owner @{HOME}/.aMule/ED2KLinks w,
  owner @{HOME}/.aMule/ED2KLinks_lock wk,

  include if exists <local/ed2k>
}

# vim:syntax=apparmor
