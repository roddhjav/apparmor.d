abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{lib}/console-setup/console-setup.sh
profile console-setup @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  @{bin}/uname rPx,
  @{bin}/mkdir rix,

  @{run}/console-setup/boot_completed w,

  include if exists <local/console-setup>
}