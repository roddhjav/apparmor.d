abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/dunstctl
profile dunstctl @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  @{bin}/dbus-send   rCx -> dbus,

  profile dbus {
    include <abstractions/base>

    @{bin}/dbus-send   mr,
  }

  include if exists <local/dunstctl>
}

# vim:syntax=apparmor
