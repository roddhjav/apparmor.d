abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/dunstify
profile dunstify @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  # file_inherit
  owner /dev/tty@{int} rw,

  include if exists <local/dunstify>
}

# vim:syntax=apparmor
