abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/acpi
profile acpi @{exec_path} flags=(complain) {
  include <abstractions/base>

  @{exec_path} mr,

  @{sys}/class/thermal/ r,
  @{sys}/class/power_supply/ r,

  @{sys}/devices/**/power_supply/{,**} r,
  @{sys}/devices/virtual/thermal/{,**} r,


  include if exists <local/acpi>
}

# vim:syntax=apparmor
