abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/cracklib-packer
profile cracklib-packer @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  owner /var/cache/cracklib/{,**} rw,

  include if exists <local/cracklib-packer>
}

# vim:syntax=apparmor
