abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/aspell
profile aspell @{exec_path} flags=(complain) {
  include <abstractions/base>
  include <abstractions/consoles>

  @{exec_path} mr,

  /usr/share/aspell/{,*} r,

  @{lib}/aspell/{,*} r,

  /var/lib/aspell/{,*} r,
  /var/lib/aspell/*.rws rw,

  include if exists <local/aspell>
}

# vim:syntax=apparmor
