abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/fsck.ext4
profile fsck-ext4 @{exec_path} {
  include <abstractions/base>

  @{exec_path} rm,

  @{sh_path}        rix,

  /etc/fstab r,

  include if exists <local/fsck-ext4>
}
