abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}{s,}bin/fsck.ext4
profile fsck-ext4 @{exec_path} {
  include <abstractions/base>

  @{exec_path} rm,

  /{usr/,}bin/{,ba,da}sh rix,

  /etc/fstab r,

  include if exists <local/fsck-ext4>
}
