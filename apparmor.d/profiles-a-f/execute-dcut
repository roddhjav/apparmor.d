abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/dcut /usr/share/dput/execute-dcut
profile execute-dcut @{exec_path} flags=(complain) {
  include <abstractions/base>
  include <abstractions/python>

  @{exec_path} r,
  @{python_path} r,

  @{etc_ro}/exim4/ r,
  owner /var/spool/exim4/ rw,

  unix (bind) type=dgram addr=@/var/spool/exim4/exim_daemon_notify,

  include if exists <local/execute-dcut>
}

# vim:syntax=apparmor
