abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/dmsetup
profile dmsetup @{exec_path} {
  include <abstractions/base>
  include <abstractions/disks-write>

  capability sys_admin,

  @{exec_path} mr,

  @{PROC}/devices r,

  include if exists <local/dmsetup>
}

# vim:syntax=apparmor
