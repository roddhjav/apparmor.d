abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{sbin}/dmsetup
profile dmsetup @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/disks-write>

  capability sys_admin,

  @{exec_path} mr,

  @{PROC}/devices r,

  /tmp/tmp.@{rand10}/mkinitramfs_@{rand6}/cryptroot/crypttab w, # file_inherit
  /var/tmp/mkinitramfs_@{rand6}/cryptroot/crypttab w, # file_inherit


  include if exists <local/dmsetup>
}

# vim:syntax=apparmor
