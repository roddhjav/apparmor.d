abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/xdg-open
profile xdg-open @{exec_path} flags=(attach_disconnected) {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/freedesktop.org>

  @{exec_path} r,

  @{sh_path}       rix,
  @{bin}/{,e}grep   ix,
  @{bin}/basename   ix,
  @{bin}/cat        ix,
  @{bin}/cut        ix,
  @{bin}/readlink   ix,
  @{bin}/realpath   ix,
  @{bin}/sed        ix,
  @{bin}/tr         ix,
  @{bin}/uname      ix,

  # To get DE information
  @{bin}/kde{,4}-config       ix,

  @{bin}/dbus-send            Cx -> bus,
  @{bin}/gdbus                Cx -> bus,
  @{bin}/xprop                Px,
  @{bin}/xdg-mime             Px,
  @{open_path}                Px -> child-open-any,

  profile bus {
    include <abstractions/base>
    include <abstractions/app/bus>
    include <abstractions/bus-session>

    include if exists <local/xdg-open_bus>
  }

  include if exists <local/xdg-open>
}

# vim:syntax=apparmor
