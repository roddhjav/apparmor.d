abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/pkla-check-authorization
profile pkla-check-authorization @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  include if exists <local/pkla-check-authorization>
}

