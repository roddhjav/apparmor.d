abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{lib}/pam_kwallet_init
profile pam_kwallet_init @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  @{sh_path}         rix,
  @{bin}/env         rix,
  @{bin}/socat{,1}   rix,

  /dev/tty rw,

  owner @{run}/user/@{uid}/kwallet5.socket rw,

  include if exists <local/pam_kwallet_init>
}

# vim:syntax=apparmor
