abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/iwctl
profile iwctl @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  /usr/share/terminfo/** r,

  /etc/inputrc r,

  owner @{user_share_dirs}/iwctl/{,**} rw,

  include if exists <local/iwctl>
}

# vim:syntax=apparmor
