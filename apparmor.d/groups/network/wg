abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/wg
profile wg @{exec_path} {
  include <abstractions/base>

  capability net_admin,

  network netlink raw,

  @{exec_path} mr,

  include if exists <local/wg>
}