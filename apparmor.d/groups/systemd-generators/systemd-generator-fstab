abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{lib}/systemd/system-generators/systemd-fstab-generator
profile systemd-generator-fstab @{exec_path} flags=(attach_disconnected) {
  include <abstractions/base>
  include <abstractions/common/systemd>

  capability dac_override,
  capability dac_read_search,
  capability mknod,

  ptrace read peer=@{p_systemd},

  @{exec_path} mr,

  /etc/fstab r,

  @{run}/systemd/generator/** rw,

  @{PROC}/@{pid}/cgroup r,

  priority=10 @{PROC}/1/environ r,

  include if exists <local/systemd-generator-fstab>
}

# vim:syntax=apparmor
