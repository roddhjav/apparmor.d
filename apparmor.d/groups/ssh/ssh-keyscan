abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/ssh-keyscan
profile ssh-keyscan @{exec_path} {
  include <abstractions/base>
  include <abstractions/nameservice-strict>

  @{exec_path} mr,

  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,

  owner /{,**} r,

  include if exists <local/ssh-keyscan>
}

# vim:syntax=apparmor
