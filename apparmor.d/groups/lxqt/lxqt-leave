abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/lxqt-leave
profile lxqt-leave @{exec_path} {
  include <abstractions/base>
  include <abstractions/graphics>
  include <abstractions/lxqt>

  @{exec_pathlx21} mr,

  owner /tmp/@{int} r,

  /dev/tty rw,

  include if exists <local/lxqt-leave>
}

# vim:syntax=apparmor
