abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/grub-file
profile grub-file @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>

  @{exec_path} mr,

  include if exists <local/grub-file>
}


# vim:syntax=apparmor
