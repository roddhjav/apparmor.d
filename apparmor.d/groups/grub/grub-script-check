abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/grub-script-check
profile grub-script-check @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>

  @{exec_path} mr,

  @{efi}/grub/grub* rw,

  include if exists <local/grub-script-check>
}

# vim:syntax=apparmor
