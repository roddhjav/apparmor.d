abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/update-grub{2,}
profile update-grub @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>

  @{exec_path} mr,
  @{bin}/{,ba,da}sh rix,
  @{bin}/grub-mkconfig rPx,

  /dev/tty@{int} rw,

  include if exists <local/update-grub>
}
