abi <abi/4.0>,

include <tunables/global>

@{appid} = @{word}.@{word}.@{word}{,.@{word}}

@{exec_path} = @{lib}/flatpak-session-helper
profile flatpak-session-helper @{exec_path} flags=(attach_disconnected,mediate_deleted) {
  include <abstractions/base>
  include <abstractions/bus-session>
  include <abstractions/consoles>
  include <abstractions/nameservice-strict>
  include <abstractions/p11-kit>

  signal send set=(hup int) peer=user_unconfined,
  signal send set=int peer=@{p_systemd},
  signal send set=int peer=flatpak-session-helper-app,

  #aa:dbus own bus=session name=org.freedesktop.Flatpak

  dbus receive bus=session
       interface=org.freedesktop.DBus.Introspectable
       member=Introspect
       peer=(name=@{busname}, label=gnome-shell),

  @{exec_path} mr,

  @{shells_path}                       rUx,
  @{coreutils_path}                    rix,
  @{bin}/dbus-monitor                 rPUx,
  @{bin}/flatpak                       rPx,
  @{bin}/getent                        rix,
  @{bin}/p11-kit                       rCx -> p11-kit,
  @{bin}/pkexec                        rCx -> pkexec,
  @{bin}/printenv                      rix,
  @{bin}/ps                            rPx,

  /var/lib/flatpak/app/@{appid}/**/@{bin}/**  rPx -> flatpak-session-helper-app,
  /var/lib/flatpak/app/@{appid}/**/@{lib}/**  rPx -> flatpak-session-helper-app,

  owner @{user_config_dirs}/mimeapps.list w,

  owner @{run}/user/@{uid}/.flatpak-helper/{,**} rw,

  /dev/ptmx rw,

  profile pkexec flags=(attach_disconnected,mediate_deleted) {
    include <abstractions/base>
    include <abstractions/app/pkexec>

    include if exists <local/flatpak-session-helper_pkexec>
  }

  profile p11-kit flags=(attach_disconnected,mediate_deleted) {
    include <abstractions/base>
    include <abstractions/ssl_certs>

    signal receive set=term peer=flatpak-session-helper,

    @{bin}/p11-kit mr,

    @{lib}/p11-kit/p11-kit-remote  ix,
    @{lib}/p11-kit/p11-kit-server  ix,

    owner @{run}/user/@{uid}/.flatpak-helper/pkcs11-flatpak-@{int} rw,

    owner @{PROC}/@{pids}/fd/ r,

    include if exists <local/flatpak-session-helper_p11-kit>
  }

  include if exists <local/flatpak-session-helper>
}

# vim:syntax=apparmor
