abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /sbin/chpst @{bin}/chpst
profile chpst @{exec_path} {
  include <abstractions/base>
  include <abstractions/devices-usb>

  @{exec_path} 	mr,

  @{bin}/agetty		rPx,
  @{bin}/pause		rix,

  include if exists <local/chpst>
}
