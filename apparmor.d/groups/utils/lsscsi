abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/lsscsi
profile lsscsi @{exec_path} {
  include <abstractions/base>
  include <abstractions/disks-read>

  @{exec_path} mr,

  / r,

  @{sys}/bus/scsi/devices/ r,

  /dev/ r,
  /dev/** r,

  include if exists <local/lsscsi>
}

# vim:syntax=apparmor
