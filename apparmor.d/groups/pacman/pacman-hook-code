  include <abstractions/base>

  capability dac_read_search,

  @{exec_path} mr,

  /{usr/,}bin/{,ba}sh     rix,
  /{usr/,}bin/sed         rix,
  /{usr/,}bin/grep        rix,

  /{usr/,}lib/code/sed?????? rw,

  include if exists <local/pacman-hook-code>
}