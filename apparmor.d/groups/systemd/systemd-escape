abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/systemd-escape
profile systemd-escape @{exec_path} {
  include <abstractions/base>
  include <abstractions/common/systemd>

  @{exec_path} mr,

  include if exists <local/systemd-escape>
}

# vim:syntax=apparmor
