abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{lib}/systemd/system-sleep/tlp
profile systemd-sleep-tlp @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  @{sh_path} rix,
  @{bin}/tlp rPUx,

  include if exists <local/systemd-sleep-tlp>
}

