abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/systemd-path
profile systemd-path @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  owner @{user_config_dirs}/user-dirs.dirs r,

  include if exists <local/systemd-path>
}
