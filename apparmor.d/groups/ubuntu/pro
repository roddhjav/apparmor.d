abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/pro
profile pro @{exec_path} {
  include <abstractions/base>
  include <abstractions/apt-common>
  include <abstractions/python>

  @{exec_path} mr,

  include if exists <local/pro>
}