abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{lib}/ubuntu-advantage/esm_cache.py
profile esm_cache @{exec_path} {
  include <abstractions/base>
  include <abstractions/python>

  @{exec_path} mr,

  include if exists <local/esm_cache>
}

