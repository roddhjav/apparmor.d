abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{lib}/{,gvfs/}gvfsd-wsdd
profile gvfsd-wsdd @{exec_path} {
  include <abstractions/base>

  network netlink raw,

  @{exec_path} mr,

  @{bin}/env r,
  @{bin}/wsdd rPx,

        @{run}/mount/utab r,
  owner @{run}/user/@{uid}/gvfsd/socket-@{rand8} rw,

  include if exists <local/gvfsd-wsdd>
}

# vim:syntax=apparmor
