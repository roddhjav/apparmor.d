abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{lib}/{,gvfs/}gvfsd-computer
profile gvfsd-computer @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  owner @{run}/user/@{uid}/gvfsd/socket-@{rand8} rw,

  include if exists <local/gvfsd-computer>
}

# vim:syntax=apparmor
