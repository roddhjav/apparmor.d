abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/dpkg-statoverride
profile dpkg-statoverride @{exec_path} flags=(complain) {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/nameservice-strict>

  capability chown,
  capability fowner,
  capability fsetid,

  @{exec_path} mr,

  @{bin}/* w,
  @{sbin}/* w,
  @{lib}/** w,

  /var/lib/** w,

  /var/lib/dpkg/ r,
  /var/lib/dpkg/statoverride rw,
  /var/lib/dpkg/statoverride-new rw,
  /var/lib/dpkg/statoverride-old wl,

  include if exists <local/dpkg-statoverride>
}

# vim:syntax=apparmor
