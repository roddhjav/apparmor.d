abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/dpkg-buildflags
profile dpkg-buildflags @{exec_path} flags=(attach_disconnected) {
  include <abstractions/base>
  include <abstractions/perl>
  include <abstractions/user-tmp>

  @{exec_path} r,

  @{bin}/dpkg mrPx -> child-dpkg,
  @{bin}/@{multiarch}gcc-@{int} mrix,

  /usr/share/lto-disabled-list/lto-disabled-list r,

  /usr/share/dpkg/cputable r,
  /usr/share/dpkg/tupletable r,
  /usr/share/dpkg/abitable r,
  /usr/share/ostable r,
  /usr/share/lto-disabled-list/lto-disabled-list r,

  /etc/dpkg/origins/* r,
  owner @{user_config_dirs}/dpkg/buildflags.conf r,

  include if exists <local/dpkg-buildflags>
}

# vim:syntax=apparmor
