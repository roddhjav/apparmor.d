abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/apt-mark
profile apt-mark @{exec_path} {
  include <abstractions/base>
  include <abstractions/apt>

  @{exec_path} mr,

  @{bin}/dpkg rPx,

  /etc/machine-id r,

  /var/lib/apt/extended_states{,.*} rw,

  owner @{PROC}/@{pid}/fd/ r,

  /var/cache/apt/ r,
  /var/cache/apt/** rwk,

  /dev/pts/@{int} rw,

  @{tmp}/tmp.*/rootdir/usr/bin/dpkg mrix,

  owner /usr/share/dpkg/varianttable r,

  include if exists <local/apt-mark>
}

# vim:syntax=apparmor
