abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/apt-mark
profile apt-mark @{exec_path} {
  include <abstractions/base>
  include <abstractions/apt-common>

  @{exec_path} mr,

  /{usr/,}bin/dpkg rPx,

  /etc/machine-id r,

  /var/lib/apt/extended_states{,.*} rw,

  owner @{PROC}/@{pid}/fd/ r,

  /var/cache/apt/ r,
  /var/cache/apt/** rwk,

  /dev/pts/[0-9]* rw,

  include if exists <local/apt-mark>
}
