abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/dpkg-query
profile dpkg-query @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>

  @{exec_path} mr,

  @{sh_path}        rix,

  @{pager_path}     rPx -> child-pager,

  /var/lib/dpkg/** r,

  # file_inherit
  /tmp/#@{int} rw,
  /dev/tty@{u8} rw,

  include if exists <local/dpkg-query>
}

# vim:syntax=apparmor
