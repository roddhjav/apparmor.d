abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{lib}/whonix-firewall/firewall-restarter
profile whonix-firewall-restarter @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>
  include <abstractions/nameservice-strict>

  capability chown,
  capability net_admin,

  ptrace read, # peer=,

  @{exec_path} mr,

  @{sh_path}                rix,
  @{bin}/chown              rix,
  @{bin}/inotifywait        rix,
  @{bin}/mkdir              rix,
  @{bin}/mkfifo             rix,
  @{bin}/mktemp             rix,
  @{bin}/rm                 rix,
  @{bin}/systemctl          rCx -> systemctl,

  /etc/machine-id r,

  owner /tmp/tmp.@{rand10} rw,

        @{run}/sdwdate/{,*} rw,
  owner @{run}/updatesproxycheck/{,*} rw,

  profile systemctl {
    include <abstractions/base>
    include <abstractions/app/systemctl>

    /{run,var}/log/journal/ r,
    /{run,var}/log/journal/@{hex32}/ r,
    /{run,var}/log/journal/@{hex32}/*.journal* r,

    include if exists <local/whonix-firewall-restarter_systemctl>
  }

  include if exists <local/whonix-firewall-restarter>
}


# vim:syntax=apparmor
