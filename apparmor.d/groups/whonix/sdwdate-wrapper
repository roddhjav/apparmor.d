abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/sdwdate
profile sdwdate-wrapper @{exec_path} {
  include <abstractions/base>
  include <abstractions/app/sudo>

  @{exec_path} mr,

  @{lib}/sdwdate/sdwdate rPx,

  include if exists <local/sdwdate-wrapper>
}

# vim:syntax=apparmor
