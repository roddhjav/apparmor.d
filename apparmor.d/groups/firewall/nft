abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{sbin}/nft
profile nft @{exec_path} {
  include <abstractions/base>
  include <abstractions/bash>
  include <abstractions/nameservice>
  include <abstractions/user-tmp>

  capability net_admin,
  capability syslog,

  network netlink raw,

  ptrace (read),

  @{exec_path} mr,

  /usr/share/iproute2/{,**} r,

  /etc/iproute2/** r,
  /etc/nftables.conf r,
  /etc/nftables/{,**} r,

  owner @{PROC}/*/fd/ r,
  owner @{PROC}/*/net/netlink r,
  owner @{PROC}/*/stat r,
  @{PROC}/1/environ r,
  @{PROC}/cmdline r,
  @{PROC}/sys/kernel/osrelease r,

  owner @{HOME}/.nft.history rw,

  include if exists <local/nft>
}

# vim:syntax=apparmor
