abi <abi/4.0>,

include <tunables/global>

profile user_unconfined flags=(attach_disconnected,mediate_deleted) {
  capability,
  network,
  mount,
  remount,
  umount,
  pivot_root,
  ptrace,
  signal,
  dbus,
  unix,
  file,

  include if exists <local/user_unconfined>
}

# vim:syntax=apparmor
