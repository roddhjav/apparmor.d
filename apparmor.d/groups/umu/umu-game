@{runtime_dirs} = @{share_dirs}/steamrt3/
@{wineprefix_dirs} = @{HOME}/Games/umu/@{int}

@{steam_share_dirs} = @{user_share_dirs}/Steam @{HOME}/.steam/debian-installation
