abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /etc/cron.{hourly,daily,weekly,monthly}/apport
profile cron-apport @{exec_path} {
  include <abstractions/base>

  @{exec_path} r,

  @{sh_path}                   rix,
  @{bin}/find                  rix,
  @{bin}/rm                    rix,

  / r,
  /var/crash/ r,
  /var/crash/*.crash w,

  include if exists <local/cron-apport>
}
