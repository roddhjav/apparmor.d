abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /etc/cron.{hourly,daily,weekly,monthly}/debtags
profile cron-debtags @{exec_path} {
  include <abstractions/base>

  @{exec_path} r,
  @{sh_path}        rix,

  /usr/bin/debtags       rPx,

  include if exists <local/cron-debtags>
}
