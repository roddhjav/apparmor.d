abi <abi/4.0>,

include <tunables/global>

@{exec_path} = /etc/cron.{hourly,daily,weekly,monthly}/ntp
profile cron-ntp @{exec_path} {
  include <abstractions/base>

  @{exec_path} r,

  @{sh_path}     rix,
  @{bin}/cat     rix,
  @{bin}/grep    rix,
  @{bin}/sed     rix,

  include if exists <local/cron-ntp>
}

# vim:syntax=apparmor
