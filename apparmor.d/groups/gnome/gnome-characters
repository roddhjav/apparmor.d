abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/gnome-characters /usr/share/org.gnome.Characters/org.gnome.Characters
profile gnome-characters @{exec_path} flags=(attach_disconnected) {
  include <abstractions/base>
  include <abstractions/bus-system>
  include <abstractions/bus/session/org.gnome.Shell.SearchProvider2>
  include <abstractions/common/gnome>
  include <abstractions/fontconfig-cache-read>
  include <abstractions/nameservice-strict>

  #aa:dbus own bus=session name=org.gnome.Characters
  dbus send bus=system path=/org/freedesktop/DBus
       interface=org.freedesktop.DBus
       member=ListNames
       peer=(label=dbus-system),

  @{exec_path} mr,

  @{bin}/gjs-console rix,

  @{open_path} rPx -> child-open-help,

  /usr/share/org.gnome.Characters/{,**} r,
  /usr/share/xml/iso-codes/{,**} r,

  owner @{PROC}/@{pid}/mounts r,
  owner @{PROC}/@{pid}/task/@{tid}/stat r,

  include if exists <local/gnome-characters>
}

# vim:syntax=apparmor
