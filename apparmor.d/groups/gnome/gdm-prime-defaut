abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /etc/gdm{3,}/{Init,Prime}/Default
profile gdm-defaut @{exec_path} flags=(complain) {
  include <abstractions/base>

  @{exec_path} mr,

  include if exists <local/gdm-prime-defaut>
}

