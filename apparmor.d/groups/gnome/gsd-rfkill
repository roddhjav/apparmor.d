abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{lib}/gsd-rfkill
profile gsd-rfkill @{exec_path} flags=(attach_disconnected) {
  include <abstractions/base>
  include <abstractions/bus-session>
  include <abstractions/bus-system>
  include <abstractions/bus/system/org.freedesktop.hostname1>
  include <abstractions/consoles>
  include <abstractions/modem-manager-observe>
  include <abstractions/network-manager-observe>
  include <abstractions/session-manager>

  signal (receive) set=(term, hup) peer=gdm*,

  network netlink raw,

  #aa:dbus own bus=session name=org.gnome.SettingsDaemon.Rfkill

  dbus receive bus=session
       interface=org.freedesktop.DBus.Introspectable
       member=Introspect
       peer=(name=:*, label=gnome-shell),

  @{exec_path} mr,

  @{sys}/devices/virtual/misc/rfkill/uevent r,

  @{run}/udev/data/c10:@{int} r,          # for non-serial mice, misc features

  /dev/rfkill rw,

  include if exists <local/gsd-rfkill>
}

# vim:syntax=apparmor
