abi <abi/3.0>,

include <tunables/global>

@{exec_path} =  @{libexec}/gdm-runtime-config
profile gdm-runtime-config @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  @{run}/gdm/ r,
  @{run}/gdm/custom.conf* rw,

  include if exists <local/gdm-runtime-config>
}