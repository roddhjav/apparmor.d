#!/usr/bin/env bash
set -eu -o pipefail

export BUILDDIR=/tmp/build/

# shellcheck source=/dev/null
_lsb_release() {
	. /etc/os-release || exit 1
	echo "$ID"
}
DISTRIBUTION="$(_lsb_release)"

cd "$HOME/Projects/apparmor.d"
case "$DISTRIBUTION" in
arch)
	just pkg
	;;
debian | ubuntu | whonix)
	sudo rm -rf debian/.debhelper/
	just dpkg
	sudo rm -rf debian/.debhelper/
	;;
opensuse*)
	just rpm
	;;
*) ;;
esac
